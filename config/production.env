# Production Environment Variables for Sensus

# Application
NODE_ENV=production
PORT=3000
APP_NAME=Sensus
APP_VERSION=1.0.0
APP_URL=https://sensus.app
API_URL=https://api.sensus.app

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=sensus-app.firebaseapp.com
FIREBASE_PROJECT_ID=sensus-app
FIREBASE_STORAGE_BUCKET=sensus-app.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
FIREBASE_APP_ID=your_app_id_here
FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# Analytics
GA_TRACKING_ID=G-XXXXXXXXXX
HOTJAR_SITE_ID=your_hotjar_site_id
MIXPANEL_TOKEN=your_mixpanel_token

# Payment Processing
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Service
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@sensus.app
SENDGRID_FROM_NAME=Sensus

# Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook

# Database
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Monitoring
GRAFANA_PASSWORD=your_grafana_password
PROMETHEUS_RETENTION=200h

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
CORS_ORIGIN=https://sensus.app

# CDN
CDN_URL=https://cdn.sensus.app
CDN_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/sensus.log
REMOTE_LOGGING_URL=https://logs.sensus.app/api/logs

# Performance
CACHE_TTL=3600
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Features
PWA_ENABLED=true
NOTIFICATIONS_ENABLED=true
OFFLINE_MODE_ENABLED=true
DARK_MODE_ENABLED=true
BETA_FEATURES_ENABLED=false

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/sensus.app.crt
SSL_KEY_PATH=/etc/nginx/ssl/sensus.app.key

# Docker
DOCKER_REGISTRY=your_registry.com
DOCKER_IMAGE=sensus-app
DOCKER_TAG=latest
