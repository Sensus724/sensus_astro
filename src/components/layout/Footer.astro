---
export interface Props {
  class?: string;
}

const {
  class: className = '',
  ...rest
} = Astro.props;

const classes = [
  'footer',
  className
].filter(Boolean).join(' ');
---

<footer class={classes} {...rest}>
  <div class="footer-container">
    <div class="footer-content">
      <!-- Información de la empresa -->
      <div class="footer-section">
        <div class="footer-brand">
          <img src="/favicon.svg" alt="Sensus" class="footer-logo" />
          <span class="footer-brand-text">Sensus</span>
        </div>
        <p class="footer-description">
          Tu compañero inteligente para el manejo de la ansiedad. 
          Herramientas validadas científicamente para tu bienestar mental.
        </p>
        <div class="footer-social">
          <a href="#" class="social-link" aria-label="Facebook">
            <i class="fab fa-facebook"></i>
          </a>
          <a href="#" class="social-link" aria-label="Twitter">
            <i class="fab fa-twitter"></i>
          </a>
          <a href="#" class="social-link" aria-label="Instagram">
            <i class="fab fa-instagram"></i>
          </a>
          <a href="#" class="social-link" aria-label="LinkedIn">
            <i class="fab fa-linkedin"></i>
          </a>
        </div>
      </div>

      <!-- Enlaces rápidos -->
      <div class="footer-section">
        <h3 class="footer-title">Enlaces Rápidos</h3>
        <ul class="footer-links">
          <li><a href="/" class="footer-link">Inicio</a></li>
          <li><a href="/evaluacion" class="footer-link">Evaluación</a></li>
          <li><a href="/diario" class="footer-link">Diario</a></li>
          <li><a href="/planes" class="footer-link">Planes</a></li>
          <li><a href="/equipo" class="footer-link">Equipo</a></li>
        </ul>
      </div>

      <!-- Recursos -->
      <div class="footer-section">
        <h3 class="footer-title">Recursos</h3>
        <ul class="footer-links">
          <li><a href="/ansiedad" class="footer-link">Sobre la Ansiedad</a></li>
          <li><a href="/contacto" class="footer-link">Contacto</a></li>
          <li><a href="/politica-privacidad" class="footer-link">Política de Privacidad</a></li>
          <li><a href="/terminos-uso" class="footer-link">Términos de Uso</a></li>
        </ul>
      </div>

      <!-- Contacto -->
      <div class="footer-section">
        <h3 class="footer-title">Contacto</h3>
        <div class="footer-contact">
          <div class="contact-item">
            <i class="fas fa-envelope"></i>
            <span>hola@sensus.app</span>
          </div>
          <div class="contact-item">
            <i class="fas fa-phone"></i>
            <span>+1 (555) 123-4567</span>
          </div>
          <div class="contact-item">
            <i class="fas fa-map-marker-alt"></i>
            <span>Madrid, España</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Línea divisoria -->
    <div class="footer-divider"></div>

    <!-- Copyright y enlaces legales -->
    <div class="footer-bottom">
      <div class="footer-copyright">
        <p>&copy; 2024 Sensus. Todos los derechos reservados.</p>
      </div>
      <div class="footer-legal">
        <a href="/politica-privacidad" class="legal-link">Privacidad</a>
        <a href="/terminos-uso" class="legal-link">Términos</a>
        <a href="/cookies" class="legal-link">Cookies</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    @apply bg-gray-900 text-white;
  }

  .footer-container {
    @apply max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12;
  }

  .footer-content {
    @apply grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8;
  }

  .footer-section {
    @apply space-y-4;
  }

  .footer-brand {
    @apply flex items-center gap-2 mb-4;
  }

  .footer-logo {
    @apply w-8 h-8;
  }

  .footer-brand-text {
    @apply text-xl font-bold;
  }

  .footer-description {
    @apply text-gray-300 text-sm leading-relaxed;
  }

  .footer-social {
    @apply flex gap-3 mt-4;
  }

  .social-link {
    @apply w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center;
    @apply hover:bg-blue-600 transition-colors duration-200;
  }

  .footer-title {
    @apply text-lg font-semibold mb-4;
  }

  .footer-links {
    @apply space-y-2;
  }

  .footer-link {
    @apply text-gray-300 hover:text-white transition-colors duration-200;
  }

  .footer-contact {
    @apply space-y-3;
  }

  .contact-item {
    @apply flex items-center gap-3 text-gray-300;
  }

  .contact-item i {
    @apply w-4 text-blue-400;
  }

  .footer-divider {
    @apply border-t border-gray-800 my-8;
  }

  .footer-bottom {
    @apply flex flex-col md:flex-row justify-between items-center gap-4;
  }

  .footer-copyright {
    @apply text-gray-400 text-sm;
  }

  .footer-legal {
    @apply flex gap-6;
  }

  .legal-link {
    @apply text-gray-400 hover:text-white text-sm transition-colors duration-200;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .footer-content {
      @apply grid-cols-1 gap-6;
    }
    
    .footer-bottom {
      @apply text-center;
    }
    
    .footer-legal {
      @apply justify-center;
    }
  }
</style>
