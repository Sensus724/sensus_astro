---
import BaseLayout from '../layouts/BaseLayout.astro'
---

<BaseLayout 
    title="Contacto | Sensus"
    description="Ponte en contacto con nuestro equipo de Sensus. Estamos aquí para ayudarte."
    keywords="contacto sensus, soporte, ayuda, atención cliente"
    activeNav="contacto"
>
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <h1 class="hero-title fade-in-up">Contacto</h1>
            <p class="hero-subtitle fade-in-up">Estamos aquí para ayudarte. Contacta con nuestro equipo de soporte.</p>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="contact-section">
        <div class="container">
            <div class="contact-grid">
                <!-- Contact Form -->
                <div class="contact-form">
                    <h2>Envíanos un mensaje</h2>
                    <form id="contact-form">
                        <div class="form-group">
                            <label for="name">Nombre</label>
                            <input type="text" id="name" name="name" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="subject">Asunto</label>
                            <select id="subject" name="subject" required>
                                <option value="">Selecciona un asunto</option>
                                <option value="soporte">Soporte técnico</option>
                                <option value="feedback">Feedback</option>
                                <option value="colaboracion">Colaboración</option>
                                <option value="otro">Otro</option>
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label for="message">Mensaje</label>
                            <textarea id="message" name="message" rows="5" required></textarea>
                        </div>
                        
                        <button type="submit" class="submit-btn">
                            <i class="fas fa-paper-plane"></i>
                            Enviar Mensaje
                        </button>
                    </form>
                </div>
                
                <!-- Contact Info -->
                <div class="contact-info">
                    <h2>Información de Contacto</h2>
                    
                    <div class="contact-item">
                        <i class="fas fa-envelope"></i>
                        <div>
                            <h3>Email</h3>
                            <p>contacto@sensus-app.com</p>
                        </div>
                    </div>
                    
                    <div class="contact-item">
                        <i class="fas fa-clock"></i>
                        <div>
                            <h3>Horario de Atención</h3>
                            <p>Lunes a Viernes: 9:00 - 18:00</p>
                        </div>
                    </div>
                    
                    <div class="contact-item">
                        <i class="fas fa-shield-alt"></i>
                        <div>
                            <h3>Urgencias</h3>
                            <p>Para emergencias, contacta el 112 o tu servicio de emergencias local</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>