---
import BaseLayout from '../layouts/BaseLayout.astro';
import Dashboard from '../components/dashboard/Dashboard.astro';

const pageTitle = 'Dashboard - Sensus';
const pageDescription = 'Tu panel de control personal para el bienestar mental. Ve tu progreso, estadísticas y accede a herramientas rápidas.';
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  activeNav="dashboard"
>
  <div class="dashboard-page">
    <div class="dashboard-page-container">
      <Dashboard 
        showWelcome={true}
        showStats={true}
        showRecentActivity={true}
        showQuickActions={true}
        showInsights={true}
        showGoals={true}
      />
    </div>
  </div>
</BaseLayout>

<style>
  .dashboard-page {
    @apply min-h-screen bg-gray-50 py-8;
  }

  .dashboard-page-container {
    @apply container mx-auto px-4 max-w-7xl;
  }

  /* Modo oscuro */
  [data-theme="dark"] .dashboard-page {
    @apply bg-gray-900;
  }
</style>
