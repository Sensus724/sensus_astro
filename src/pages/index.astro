    activeNav="inicio"
>
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="hero-content">
                <div class="hero-text">
                    <h1 class="hero-title fade-in-up">Encuentra tu Calma con Ciencia y Empatía</h1>
                    <p class="hero-subtitle fade-in-up">Tu compañero inteligente para el manejo de la ansiedad. Test GAD-7 gratuito, diario emocional encriptado y recursos profesionales respaldados por la ciencia.</p>
                    
                    <div class="trust-badges fade-in-up">
                        <div class="trust-badge">
                            <i class="fas fa-check-circle"></i>
                            127,000+ usuarios
                        </div>
                        <div class="trust-badge">
                            <i class="fas fa-shield-alt"></i>
                            Validado científicamente
                        </div>
                        <div class="trust-badge">
                            <i class="fas fa-gift"></i>
                            100% gratuito
                        </div>
                    </div>
                    
                    <div class="hero-actions fade-in-up">
                        <a href="/evaluacion" class="btn-cta">
                            <i class="fas fa-heart"></i>
                            Descubrir mi Ansiedad Gratis
                        </a>
                        <p class="cta-disclaimer">✓ Sin registro • ✓ Resultados inmediatos • ✓ 100% privado</p>
                    </div>
                </div>
                
                <div class="hero-image">
                    <div class="hero-visual">
                        <div class="floating-element"></div>
                        <div class="floating-element"></div>
                        <div class="floating-element"></div>
                        <div class="hero-illustration">
                            <i class="fas fa-heart"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Cómo Funciona - 3 Pasos Visuales -->
    <section class="section">
        <div class="container">
            <div class="section-card">
                <h2 class="section-title">Cómo Funciona</h2>
                <p class="section-description">En solo 3 pasos simples, comienza tu camino hacia la calma con herramientas validadas científicamente.</p>
                
                <div class="steps-grid">
                    <div class="step-card">
                        <div class="step-number">1</div>
                        <div class="step-icon">
                            <i class="fas fa-clipboard-check"></i>
                        </div>
                        <h3>Evalúa</h3>
                        <p>Realiza el test GAD-7 validado científicamente en solo 2 minutos</p>
                    </div>
                    
                    <div class="step-card">
                        <div class="step-number">2</div>
                        <div class="step-icon">
                            <i class="fas fa-book-open"></i>
                        </div>
                        <h3>Reflexiona</h3>
                        <p>Lleva un diario emocional que analiza tus patrones únicos</p>
                    </div>
                    
                    <div class="step-card">
                        <div class="step-number">3</div>
                        <div class="step-icon">
                            <i class="fas fa-heart"></i>
                        </div>
                        <h3>Mejora</h3>
                        <p>Aprende técnicas personalizadas basadas en TCC</p>
                    </div>
                </div>

                <div class="progress-visual">
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: 87%"></div>
                    </div>
                    <p><strong>87% de usuarios reducen su ansiedad en 3 semanas</strong></p>
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonio Corto e Impactante -->
    <section class="section">
        <div class="container">
            <div class="testimonial-card">
                <div class="testimonial-content">
                    <div class="testimonial-avatar">
                        <img src="/assets/images/maria-testimonial.jpg" alt="María González" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
                        <div class="avatar-fallback" style="display: none;">
                            <i class="fas fa-user"></i>
                        </div>
                    </div>
                    <div class="testimonial-text">
                        <blockquote class="testimonial-quote">
                            "En 3 semanas reduje mis ataques de pánico en 87%. Sensus me devolvió la vida."
                        </blockquote>
                        <div class="testimonial-author">María González, 34 años</div>
                        <div class="testimonial-role">Madre de 2 hijos</div>
                        
                        <div class="testimonial-stats">
                            <div class="stat-chip">
                                <i class="fas fa-chart-line"></i>
                                87% reducción
                            </div>
                            <div class="stat-chip">
                                <i class="fas fa-clock"></i>
                                3 semanas
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Respaldado por la Ciencia -->
    <section class="section">
        <div class="container">
            <div class="section-card">
                <h2 class="section-title">Respaldado por la Ciencia</h2>
                <p class="section-description">Nuestras herramientas están validadas por instituciones médicas de prestigio mundial y utilizadas en hospitales y clínicas.</p>
                
                <div class="science-grid">
                    <div class="science-card">
                        <div class="science-logo">
                            <i class="fas fa-university"></i>
                        </div>
                        <div class="science-title">Universidad de Warwick</div>
                        <div class="science-description">Validación GAD-7 (2006)</div>
                    </div>
                    
                    <div class="science-card">
                        <div class="science-logo">
                            <i class="fas fa-hospital"></i>
                        </div>
                        <div class="science-title">Mayo Clinic</div>
                        <div class="science-description">Implementación clínica</div>
                    </div>
                    
                    <div class="science-card">
                        <div class="science-logo">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <div class="science-title">NHS UK</div>
                        <div class="science-description">Protocolo de salud mental</div>
                    </div>
                    
                    <div class="science-card">
                        <div class="science-logo">
                            <i class="fas fa-microscope"></i>
                        </div>
                        <div class="science-title">NIMH</div>
                        <div class="science-description">Investigación en ansiedad</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Beneficios Específicos -->
    <section class="section">
        <div class="container">
            <div class="section-card">
                <h2 class="section-title">¿Por qué elegir Sensus?</h2>
                <p class="section-description">Herramientas validadas científicamente diseñadas específicamente para el manejo de la ansiedad.</p>
                
                <div class="benefits-grid">
                    <div class="benefit-card">
                        <div class="benefit-icon">
                            <i class="fas fa-brain"></i>
                        </div>
