---

import BaseLayout from '../layouts/BaseLayout.astro';
import MonitoringDashboard from '../components/MonitoringDashboard.astro';

const pageTitle = 'Monitoreo y Logging';
const pageDescription = 'Dashboard de monitoreo en tiempo real para Sensus';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main class="monitoring-page">
    <div class="page-header">
      <h1>Monitoreo y Logging</h1>
      <p>Dashboard de monitoreo en tiempo real para Sensus</p>
    </div>

    <div class="monitoring-content">
      <MonitoringDashboard />
    </div>
  </main>
</BaseLayout>

<style>
  .monitoring-page {
    min-height: 100vh;
    background: var(--color-background);
  }

  .page-header {
    text-align: center;
    padding: 2rem 1rem;
    background: var(--color-surface);
    border-bottom: 1px solid var(--color-border);
  }

  .page-header h1 {
    margin: 0 0 0.5rem 0;
    color: var(--color-text-primary);
    font-size: 2.5rem;
    font-weight: 700;
  }

  .page-header p {
    margin: 0;
    color: var(--color-text-secondary);
    font-size: 1.125rem;
  }

  .monitoring-content {
    padding: 2rem 1rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .page-header p {
      font-size: 1rem;
    }

    .monitoring-content {
      padding: 1rem 0.5rem;
    }
  }
</style>
