rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Reglas para archivos de perfil de usuario
    match /users/{userId}/profile/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para archivos del diario
    match /users/{userId}/diary/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para archivos de evaluaciones
    match /users/{userId}/evaluations/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para archivos p√∫blicos (solo lectura)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
